         <listPlace>
            <place type="river">
               <placeName>Āngarab</placeName>
               <placeName type="alt">Small Āngarab</placeName>
               <placeName xml:lang="gez">አንገረብ</placeName>
               <country ref="LOC3010Ethiop">Ethiopia</country>
               <region ref="LOC1426Amhara">Amhara</region>
               <settlement type="town" ref="LOC3577Gondar">Gondar</settlement>
