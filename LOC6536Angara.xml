            <listPlace>
                <place type="river">
                    <placeName xml:id="n1">Āngarab</placeName>
                    <placeName type="alt" xml:id="n2">Great Āngarab</placeName>
                    <placeName xml:lang="gez" corresp="#n1">አንገረብ</placeName>
                    <placeName type="alt" xml:id="n3">G<hi rend="apices">w</hi>ang</placeName>
                    <country ref="LOC3010Ethiop">Ethiopia</country>
                    <region ref="LOC1426Amhara">Amhara</region>
